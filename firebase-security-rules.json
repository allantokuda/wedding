{
  "rules": {
    ".read": "auth != null && auth.uid == 'google:000000000000000000000'",
    ".write": "auth != null && auth.uid == 'google:000000000000000000000'",
    "user": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "event": {
      "$event_id": {
        ".read": true,
        ".write": "newData.child('uid').val() == auth.uid"
      }
    },
    "invitation": {
      ".read": true,
      ".write": true
    }
  }
}
